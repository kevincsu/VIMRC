set nocompatible

set hidden
set wildmenu
set showcmd
set hlsearch

set rtp+=/usr/local/lib/go/misc/vim 
filetype plugin indent on 
syntax on
set tabstop=4
set showmatch
set backspace=indent,eol,start
set autoindent
set ignorecase
set smartcase
set nostartofline
set ruler
set mouse=a
set cmdheight=2
set number

set shiftwidth=4
set softtabstop=4
set tabstop=4

nnoremap <C-L> :nohl<CR><C-L>
map 1 ^
map 2 $

set background=dark
highlight OverLength ctermbg=red ctermfg=white guibg=#592929
match OverLength /\%81v.\+/
